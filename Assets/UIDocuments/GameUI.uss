.container--main {
    flex-grow: 1;
    background-color: rgb(255, 255, 228);
}

.container--drag {
    position: absolute;
    width: 100%;
    height: 100%;
}

.container-main--header {
    flex-basis: 20%;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.container-main--feedback {
    flex-basis: 15%;
}

.container-main--body {
    flex-grow: 1;
}

.container-main-header--separator {
    height: 10%;
    width: 25%;
    background-color: rgb(13, 13, 13);
}
